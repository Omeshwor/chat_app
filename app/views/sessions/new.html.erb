<div class="ui container">
    <h4 class="ui center aligned medium icon header">
        Welcome to the Chat Room
        <i class="circular keyboard inverted teal icon"></i>
    </h4>
    <div class="ui placeholder segment">
        <div class="ui two column fluid stackable grid">
            <div class="column">
                <%= form_for(:session, :html => {class:"form-horizontal ui form", role:"form"}, url: login_path ) do |f| %>
                    <div class="field">
                        <%= f.label :username %>
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <%= f.text_field :username, class:"form-control", placeholder: "Enter username", autofocus: true %>
                        </div>
                    </div>
                    <div class="field">
                        <%= f.label :password %>
                        <div class="ui left icon input">
                            <%= f.password_field :password, class:"form-cotrol", autocomplete: "off" %>
                            <i class="lock icon"></i>
                      </div>
                    </div>
                    <div class="field">
                        <%= f.submit "Login", class:"ui teal submit button" %>
                    </div>
                <% end %>
            </div>
            <div class="middle aligned column">
                <div class="ui big teal button">
                    <i class="signup inverted icon"></i>
                    <%= link_to "Sign Up", new_user_path %>
                </div>
            </div>
        </div>
        <div class="ui vertical divider">
            Or
        </div>
    </div>
</div>
