<div class="ui container">
    <div class="row">
        <% flash.each do |name, msg| %>
            <div class="ui <%= "#{name}" %> message ">
                <i class="close icon"></i>
                <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
            </div>
        <% end %>
    </div>
</div>
