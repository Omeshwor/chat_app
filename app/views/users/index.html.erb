<h4 class="ui center aligned medium icon header">
    Listing all users
</h4>

<div align="center" class="ui pagination menu grid">
    <%= will_paginate @users, renderer: WillPaginateSemanticUi::ActionView::Renderer %>
</div>

<div class="ui two column grid">
    <% @users.each do |user| %>
        <div class="column">
            <div class="ui cards">
                <div class="ui card">
                    <div class="content">
                        <%= link_to user.username, user_path(user), class: "header" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
